{
  "openapi": "3.0.0",
  "info": {
    "title": "Hair Stylist and Beauty Review Backend API",
    "description": "API for managing client details, appointments, services for hair stylists, user registration, login, Twilio integration, and Beauty Review product interactions including adding and removing products.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/clients": {
      "get": {
        "summary": "List all clients",
        "responses": {
          "200": {
            "description": "A list of clients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Client"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new client",
        "requestBody": {
          "description": "Client to add",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Client"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Client created"
          }
        }
      }
    },
    "/clients/{clientId}": {
      "put": {
        "summary": "Update a client",
        "parameters": [
          {
            "name": "clientId",
            "in": "path",
            "required": true,
            "description": "The ID of the client to update",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Updated client data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Client"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Client updated"
          },
          "404": {
            "description": "Client not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a client",
        "parameters": [
          {
            "name": "clientId",
            "in": "path",
            "required": true,
            "description": "The ID of the client to delete",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Client deleted"
          },
          "404": {
            "description": "Client not found"
          }
        }
      }
    },
    "/services": {
      "get": {
        "summary": "List all services",
        "responses": {
          "200": {
            "description": "A list of services",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Service"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new service",
        "requestBody": {
          "description": "Service details",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Service"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Service created"
          }
        }
      }
    },
    "/products": {
      "get": {
        "summary": "Get a list of all Beauty Review products",
        "responses": {
          "200": {
            "description": "A list of products",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductsResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a Beauty Review product to the user's database",
        "requestBody": {
          "description": "Product to add",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product added to the database"
          }
        }
      }
    },
    "/products/{productId}": {
      "delete": {
        "summary": "Remove a Beauty Review product from the user's database",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "description": "The ID of the product to remove",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product removed from the database"
          },
          "404": {
            "description": "Product not found in the database"
          }
        }
      }
    },
    "/BeautyReview/products/top_rated": {
      "get": {
        "summary": "Get a list of all top rated Beauty Review products",
        "responses": {
          "200": {
            "description": "A list of top-rated products",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TopRatedProductsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/BeautyReview/products/rating/{productId}": {
      "get": {
        "summary": "Get the overall rating for a Beauty Review product",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "description": "The ID of the product to get the rating for",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Overall product rating",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductRatingResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Client": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "contactInfo": {
            "type": "string"
          }
        },
        "required": ["name", "contactInfo"]
      },
      "Service": {
        "type": "object",
        "required": ["name", "duration", "price"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the service"
          },
          "duration": {
            "type": "integer",
            "description": "Duration of the service in minutes",
            "format": "int32"
          },
          "price": {
            "type": "number",
            "description": "Price of the service",
            "format": "double"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "brand": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "price": {
            "type": "number"
          }
        },
        "required": ["id", "name"]
      },
      "ProductsResponse": {
        "type": "object",
        "properties": {
          "products": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Product"
            }
          }
        }
      },
      "TopRatedProductsResponse": {
        "type": "object",
        "properties": {
          "products": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Product"
            }
          }
        }
      },
      "ProductRatingResponse": {
        "type": "object",
        "properties": {
          "rating_count": {
            "type": "integer"
          },
          "rating": {
            "type": "number"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        },
        "required": ["username", "password", "email"]
      },
      "UserLogin": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        },
        "required": ["username", "password"]
      },
      "LoginSuccessResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "Authentication token provided upon successful login"
          }
        }
      }
    }
  }
}
